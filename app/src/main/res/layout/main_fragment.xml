<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_main_fragment_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_tab_index_selected"
            android:paddingTop="1dp"
            android:text="首页"
            android:textSize="8dp"
            android:textColor="@color/grid_state_focused" />

        <Button
            android:id="@+id/btn_main_fragment_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_tab_msg_selected"
            android:paddingTop="1dp"
            android:text="消息"
            android:textSize="8dp"
            android:textColor="@color/grid_state_focused" />

        <Button
            android:id="@+id/btn_main_fragment_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/ic_tab_me_selected"
            android:paddingTop="1dp"
            android:text="我"
            android:textSize="8dp"
            android:textColor="@color/grid_state_focused" />
    </LinearLayout>

</LinearLayout>